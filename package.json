{
  "name": "simple-trello-burndown",
  "version": "0.0.1",
  "description": "A simple framework for creating a burndown of Trello tags",
  "main": "index.js",
  "engines": {
    "node": "6.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brycekbargar/simple-trello-burndown.git"
  },
  "author": "bryce",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brycekbargar/simple-trello-burndown/issues"
  },
  "homepage": "https://github.com/brycekbargar/simple-trello-burndown#readme",
  "dependencies": {
    "knex": "^0.11.10",
    "mariasql": "^0.2.6",
    "restify": "^4.0.2",
    "swagger-restify-mw": "^0.7.0"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "npm-watch": "^0.1.6",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "sqlite3": "^3.1.4",
    "swagger": "^0.7.5",
    "tbd": "^0.6.4"
  },
  "watch": {
    "test": {
      "patterns": [
        "./"
      ],
      "extensions": "js",
      "ignore": "node_modules",
      "quiet": true
    }
  },
  "scripts": {
    "test": "eslint ./ && istanbul cover _mocha",
    "watch": "npm-watch",
    "create-migration": "knex migrate:make --knexfile ./config/knexfile.js",
    "heroku-postbuild": "knex migrate:latest --knexfile=./config/knexfile.js --env=production",
    "init-dev": "./resetDevDatabase.js"
  }
}
